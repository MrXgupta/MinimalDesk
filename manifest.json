{
  "manifest_version": 3,
  "name": "MinimalDesk",
  "version": "1.0",
  "description": "A minimal productivity dashboard replacing Chrome's new tab.",
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}